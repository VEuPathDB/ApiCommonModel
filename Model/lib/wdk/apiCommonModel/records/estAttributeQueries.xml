      <testRowCountSql excludeProjects="EuPathDB">
               select count(*)
               from dots.nasequence s, sres.ontologyTerm ot
               where ot.ontology_term_id = s.sequence_ontology_id
               and ot.name = 'EST'
       </testRowCountSql>

       <testRowCountSql includeProjects="EuPathDB">
	 SELECT count(*) FROM ApidbTuning.EstAttributes
       </testRowCountSql>

       <sqlQuery name="Bfmv">
            <column name="source_id" ignoreCase="true"/>
            <column name="project_id"/>
            <column name="project_id_lc"/>
            <column name="a_count" />
            <column name="c_count" />
            <column name="g_count" />
            <column name="t_count" />
            <column name="other_count" />
            <column name="length" />
            <column name="primer"  ignoreCase="true"/>
            <column name="dbest_name"  ignoreCase="true"/>
            <column name="vector"  ignoreCase="true"/>
            <column name="stage"  ignoreCase="true"/>
            <column name="organism_text"  ignoreCase="true"/>
            <column name="formatted_organism"  sortingColumn="organism_text" ignoreCase="true"/>
            <column name="ncbi_tax_id"  ignoreCase="true"/>
            <column name="external_db_name"  ignoreCase="true"/>

            <sql includeProjects="PlasmoDB,EuPathDB">
            <![CDATA[
           SELECT bfmv.source_id, bfmv.project_id, lower(bfmv.project_id) as project_id_lc, bfmv.primer, bfmv.a_count,  bfmv.c_count, 
                  bfmv.g_count, bfmv.t_count, bfmv.other_count, bfmv.length, 
                  bfmv.dbest_name, bfmv.vector, bfmv.stage, bfmv.organism as organism_text,
                  bfmv.ncbi_tax_id,
                  '<i>' || SUBSTR(bfmv.organism, 1, 1) || '.' ||
                  REGEXP_REPLACE(SUBSTR(bfmv.organism, INSTR(bfmv.organism, ' ')), '[[:space:]]+',
                                 chr(38) || 'nbsp;') || '</i>'
                    AS formatted_organism,
                  bfmv.external_db_name
            FROM  ApidbTuning.EstAttributes bfmv
            ]]>
           </sql>

            <sql includeProjects="CryptoDB,ToxoDB,GiardiaDB,TrichDB,TriTrypDB,AmoebaDB,MicrosporidiaDB,FungiDB,SchistoDB,InitDB,PiroplasmaDB">
            <![CDATA[
           SELECT bfmv.source_id, bfmv.project_id, bfmv.primer, bfmv.a_count,  bfmv.c_count, 
                  bfmv.g_count, bfmv.t_count, bfmv.other_count, bfmv.length, 
                  bfmv.dbest_name, bfmv.vector, bfmv.stage,
                  CASE bfmv.organism when 'Giardia intestinalis' THEN 'Giardia lamblia' else bfmv.organism END as organism_text,
                  bfmv.ncbi_tax_id,
                  '<i>' || SUBSTR(bfmv.organism, 1, 1) || '.' ||
                  REGEXP_REPLACE(SUBSTR(CASE bfmv.organism when 'Giardia intestinalis' THEN 'Giardia lamblia' else bfmv.organism END, INSTR(bfmv.organism, ' ')), '[[:space:]]+',
                                 chr(38) || 'nbsp;') || '</i>'
                    AS formatted_organism,
                  bfmv.external_db_name
            FROM  ApidbTuning.EstAttributes bfmv
            ]]>
           </sql>
        </sqlQuery>

        <sqlQuery name="Sequence" excludeProjects="EuPathDB">
            <column name="source_id" />
            <column name="project_id" />
            <column name="sequence" />
            <sql>
                <![CDATA[
                  SELECT source_id, project_id, sequence
                  FROM   ApidbTuning.EstSequence
                ]]>
           </sql>
        </sqlQuery>

        <sqlQuery name="LinkOut" excludeProjects="EuPathDB">
            <column name="source_id" />
            <column name="project_id" />
            <column name="linkout" />
            <sql>
            <![CDATA[
            SELECT source_id, '@PROJECT_ID@' as project_id,
                CASE 
                  WHEN bfmv.external_db_name = 'C. parvum ESTs' then 
                      '<a href="http://www.ncbi.nlm.nih.gov/entrez/viewer.fcgi?val=' || bfmv.source_id || '">NCBI</a>'
                  WHEN bfmv.external_db_name like '%dbEST%' THEN 
                      '<a href="http://www.ncbi.nlm.nih.gov/entrez/viewer.fcgi?val=' || bfmv.source_id || '">NCBI</a>'
                  ELSE 'none'
                END
                as linkout
            FROM  ApidbTuning.EstAttributes bfmv
            ]]>
            </sql>
        </sqlQuery>

        <sqlQuery name="Reference" excludeProjects="EuPathDB">
            <column name="source_id" />
            <column name="project_id" />
            <column name="author" />
            <column name="affiliation" />
            <column name="address" />
            <sql>
            <![CDATA[
            SELECT e.accession as source_id, '@PROJECT_ID@' as project_id,
                   CASE WHEN (c.name IS NOT NULL) THEN c.name ELSE c.last END AS author,
                   c.address1 as affiliation,
                   c.address2 as address
            FROM dots.est e, sres.contact c, 
                 dots.externalnasequence ens, sres.ontologyTerm ot
            WHERE e.contact_id = c.contact_id
            and ens.na_sequence_id = e.na_sequence_id
            and ens.sequence_ontology_id = ot.ontology_term_id
            and ot.name = 'EST'
            ]]>
            </sql>
        </sqlQuery>


    </querySet>


</wdkModel>
